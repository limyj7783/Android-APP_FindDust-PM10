<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/LinearLayout">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="6"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pm10"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pm25"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/o3"
            android:textSize="30sp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:contentDescription="@string/pm10"
            android:id="@+id/ImageViewPM10Condition"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:contentDescription="@string/pm25"
            android:id="@+id/ImageViewPM25Condition"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:contentDescription="@string/o3"
            android:id="@+id/ImageViewO3Condition"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/TextViewPM10Condition"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/TextViewPM25Condition"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/TextViewO3Condition"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no2"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/co"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/so2"
            android:textSize="30sp"
            android:layout_marginTop="40dp"
            android:layout_columnWeight="1"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:contentDescription="@string/no2"
            android:id="@+id/ImageViewNO2Condition"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:contentDescription="@string/co"
            android:id="@+id/ImageViewCOCondition"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:contentDescription="@string/so2"
            android:id="@+id/ImageViewSO2Condition"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/TextViewNO2Condition"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/TextViewcCOCondition"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/TextViewSO2Condition"
            android:layout_gravity="center"/>
    </GridLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_bar"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/line"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/resources"
        android:textSize="35sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/ministry_of_environment"
        android:textSize="25sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="@string/meteorological_office"
        android:textSize="25sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/black_bar"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:contentDescription="@string/line" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:id="@+id/TextViewMeasureLocation"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:id="@+id/TextViewUpdatedTime"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginStart="20dp"
        android:id="@+id/TextViewPM25NullValue"/>
</LinearLayout>